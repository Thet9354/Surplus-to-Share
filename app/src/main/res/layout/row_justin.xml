<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_justIn"
        android:layout_width="200dp"
        android:layout_height="210dp"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="@dimen/cardview_default_elevation"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgView_justIn"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/justin1"/>

            <TextView
                android:id="@+id/txtView_justInTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dave's Killer Bread"
                android:textColor="@color/black"
                android:layout_below="@+id/imgView_justIn"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/txtView_justInPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$5.99"
                android:textColor="@color/black"
                android:layout_below="@+id/txtView_justInTitle"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>