<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_foodItem"
        android:layout_width="160dp"
        android:layout_height="200dp"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="@dimen/cardview_default_elevation"
        card_view:cardUseCompatPadding="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgView_foodItem"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:src="@drawable/store4"/>

            <TextView
                android:id="@+id/txtView_foodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dessert Box"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/txtView_foodDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Contains donuts, cakes, cupcakes]"
                android:textSize="10dp"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/txtView_foodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$9.90"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="5dp"
                android:textColor="#008000"
                android:textStyle="bold"/>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>